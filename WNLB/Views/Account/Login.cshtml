@model WNLB.Models.LoginModel

@{
    ViewBag.Title = "Log in";
    Layout = "~/Views/Shared/_LoginLayout.cshtml";
    var remember_me = ModelMetadata.FromLambdaExpression<WNLB.Models.LoginModel, bool>(m => m.RememberMe, ViewData);
}

<div class="col-sm-offset-3 col-sm-6">
    <div class="row">
        <h3 class="text-center text-primary">Log into WNLBv1.0</h3>
        <br />
        <br />
        <section id="loginForm">
            @using (Html.BeginForm(null, null, new { ReturnUrl = ViewBag.ReturnUrl }, FormMethod.Post, new { @class = "form-horizontal" }))
            {
                @Html.AntiForgeryToken()
                @Html.ValidationSummary(true)

                <div class="form-group">
                    @Html.LabelFor(m => m.UserName, new { @class = "control-label col-sm-3" })
                    <div class="col-sm-9">
                        @Html.TextBoxFor(m => m.UserName, new { @class = "form-control" , autofocus = ""})
                        @Html.ValidationMessageFor(m => m.UserName)
                    </div>
                </div>
                <div class="form-group">
                    @Html.LabelFor(m => m.Password, new { @class = "control-label col-sm-3" })
                    <div class="col-sm-9">
                        @Html.PasswordFor(m => m.Password, new { @class = "form-control" })
                        @Html.ValidationMessageFor(m => m.Password)
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-sm-offset-3 col-sm-9">
                        <div class="checkbox">
                            <label for="@remember_me.PropertyName" class="checkbox">
                                @Html.CheckBoxFor(m => m.RememberMe) @remember_me.DisplayName
                            </label>
                        </div>
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-sm-offset-3 col-sm-9">
                        <button type="submit" class="btn btn-primary">Log in</button>
                    </div>
                </div>
            }
        </section>

        <br /><br /><br />
        <p class="text-center text-muted">&copy; 2015 Virtual University of Pakistan</p>
    </div>
</div>



@section Scripts {
    @Scripts.Render("~/_config/bundles/jqueryval")    
}
